---
import ExperienceItem from "./ExperienceItem.astro";

const EXPERIENCE = [
  {
    title: "Practicas Programador Web Junior Hospital Ochoa",
    date: "Abril 2024 - Junio 2024",
    description:
      "Practicas en el departamento informático del Hospital Ochoa, Marbella, Málaga. Desarrollando un sistema de gestión de citas médicas, infraestutura interna de la red del hospital con tecnologias como PHP, React, JS, etc.",
    Link: "https://hospitalochoa.com/es/",
  }
];

---

<ol class="relative border-s border-gray-200 dark:border-gray-700 ml-3">
  {
    EXPERIENCE.map(experience => (
        <li class="mb-10 mt-4">
            <ExperienceItem {...experience}></ExperienceItem>
        </li>
    ))
  }
</ol>
