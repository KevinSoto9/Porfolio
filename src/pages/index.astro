---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import "../styles/global.css";
import LinkedInIcon from "../components/icons/LinkedIn.astro";
import GithubIcon from "../components/icons/Github.astro";
import MailIcon from "../components/icons/Mail.astro";
import SocialPill from "../components/SocialPill.astro";
---

<Layout title="Portfolio de Kevin Andrés Soto Briceño - Desarrollador y Programador Web"
  description="Kevin Andrés Soto Briceño - Desarrollador y Programador Web">
  <main>
    <section class="w-full mx-auto lg:w-[740px] py-44">
      <img
        class="rounded-full size-10 mb-4"
        src="https://media.licdn.com/dms/image/v2/D4E03AQHzFGCFJId_Bw/profile-displayphoto-shrink_200_200/profile-displayphoto-shrink_200_200/0/1722269996641?e=2147483647&v=beta&t=D0FGXYJqOQ0vvLkgpn0WGIHcuZiQF9NHcxftepHQrvA"
        alt="Kevin photo"
      />
      <h1 class="text-white text-5xl font-bold flex flex-row gap-x-4 pb-10">
        <a
          href="https://www.linkedin.com/in/kevin-andr%C3%A9s-soto-brice%C3%B1o-833a8a31b/"
          target="_blank"
          rel="noopener"
          class="flex justify-center items-center"
        >
          Hey, soy Kevin
        </a>
        <div class="flex justify-center items-center">
          <Badge>Disponible para trabajar</Badge>
        </div>
      </h1>
      <h2 class="text-2xl text-wrap">
        <span class="font-bold">Desarrollador web en proceso.</span>
        <span class="text-blue-200/90">De Malagá, España.</span>
        <span class="opacity-80"
          >Especializado en creacion de sitios y aplicaciones web</span
        >
      </h2>

      <ul>
        <nav class="flex gap-x-2 mt-10">
			<SocialPill href="https://www.linkedin.com/in/kevin-andr%C3%A9s-soto-brice%C3%B1o-833a8a31b/">
				<LinkedInIcon class="size-6"/>
				LinkedIn
			</SocialPill>
			<SocialPill href="https://github.com/KevinSoto9">
				<GithubIcon class="size-6"/>
				GitHub
			</SocialPill>
			<SocialPill href="mailto:KevinS9sotob@hotmail.com">
				<MailIcon class="size-6"/>
				KevinS9sotob@hotmail.com
			</SocialPill>
        </nav>
      </ul>
    </section>
  </main>
</Layout>
