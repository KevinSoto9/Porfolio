---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import "../styles/global.css";
import LinkedInIcon from "../components/icons/LinkedIn.astro";
import GithubIcon from "../components/icons/Github.astro";
import MailIcon from "../components/icons/Mail.astro";
import SocialPill from "../components/SocialPill.astro";
import Experience from "../components/Experience.astro";
import Formacion from "../components/Formacion.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Briefcase from "../components/icons/Briefcase.astro";
import Book from "../components/icons/Book.astro";
import Code from "../components/icons/Code.astro";
import Projects from "../components/Projects.astro";
---

<Layout
  title="Portfolio de Kevin Andrés Soto Briceño - Desarrollador y Programador Web"
  description="Kevin Andrés Soto Briceño - Desarrollador y Programador Web"
>
  <main class="px-4">
    <SectionContainer class="py-44 pb-32">
      <img
        class="rounded-full size-10 mb-4"
        src="https://media.licdn.com/dms/image/v2/D4E03AQHzFGCFJId_Bw/profile-displayphoto-shrink_200_200/profile-displayphoto-shrink_200_200/0/1722269996641?e=2147483647&v=beta&t=D0FGXYJqOQ0vvLkgpn0WGIHcuZiQF9NHcxftepHQrvA"
        alt="Kevin photo"
      />
      <h1 class="text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10">
        <a
          href="https://www.linkedin.com/in/kevin-andr%C3%A9s-soto-brice%C3%B1o-833a8a31b/"
          target="_blank"
          rel="noopener"
          class="flex justify-center items-center"
        >
          Hey, soy Kevin
        </a>
        <div class="flex justify-center items-center">
          <Badge>Disponible para trabajar</Badge>
        </div>
      </h1>
      <h2 class="text-xl lg:text-2xl text-wrap max-w-[700px]">
        <span class="font-bold">Desarrollador web en proceso.</span>
        <span class="text-blue-200/90">De Malagá, España.</span>
        <span class="opacity-80"
          >Especializado en creacion de sitios y aplicaciones web</span
        >
      </h2>

      <ul>
        <nav class="flex gap-4 mt-8 flex-wrap">
          <SocialPill
            href="https://www.linkedin.com/in/kevin-andr%C3%A9s-soto-brice%C3%B1o-833a8a31b/"
          >
            <LinkedInIcon class="md:size-6 size-4" />
            LinkedIn
          </SocialPill>
          <SocialPill href="https://github.com/KevinSoto9">
            <GithubIcon class="md:size-6 size-4" />
            GitHub
          </SocialPill>
          <SocialPill href="mailto:KevinS9sotob@hotmail.com">
            <MailIcon class="md:size-6 size-4" />
            KevinS9sotob@hotmail.com
          </SocialPill>
        </nav>
      </ul>
    </SectionContainer>

    <SectionContainer id="formacion">
      <h2 class="text-2xl font-semibold mb-6 flex gap-x-3 items-center">
        <Book class="size-7 opacity-80" />
        Formacion Académica
      </h2>

      <Formacion/>

    </SectionContainer>

    <SectionContainer id="experiencia" class="">

      <h2 class="text-2xl font-semibold mb-6 flex gap-x-3 items-center">
        <Briefcase class="size-7 opacity-80" />
        Experiencia Laboral
      </h2>
      
      <Experience />
    </SectionContainer>

    <SectionContainer id="proyectos" class="">

      <h2 class="text-2xl font-semibold mb-6 flex gap-x-3 items-center">
        <Code class="size-7 opacity-80" />
        Proyectos
      </h2>
      
      <Projects />
    </SectionContainer>
  </main>
</Layout>
