---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '@fontsource-variable/onest';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Portfolio de Kevin Andrés Soto Briceño - Desarrollador y Programador Web</title>
	</head>
	<body class="">
		<div class="absolute inset-0 -z-10 h-full w-full items-center px-5 py-24 [background:radial-gradient(125%_125%_at_50%_10%,#000_40%,#69a_150%)]"></div>
		<Header/>
		<slot />
		<Footer/>
	</body>
</html>

<style is:global>
	:root {
		color-scheme: light dark;
	}

	html{
		font-family: 'Onest Variable', system-ui, sans-serif;
		scroll-behavior: smooth;
	}

	body{
		background: #050505;
		display: flex;
		flex-direction: column;
		min-height: 100vh;
	}

	@media (prefers-reduced-motion: reduce) {
		html{
			scroll-behavior: auto;
		}
	}
</style>
